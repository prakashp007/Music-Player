<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/damaru_back"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="100dp"
            android:background="@drawable/music_card">

            <TextView
                android:id="@+id/head_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Doremon"
                android:textColor="@color/white"
                android:textSize="70dp"
                android:textStyle="bold" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="400dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back"
                android:layout_width="80dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/rewind_button_foreground" />

            <ImageView
                android:id="@+id/play"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/play_button" />

            <ImageView
                android:id="@+id/forward"
                android:layout_width="80dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/fastforward_button_foreground" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>